generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  userName  String
  firstName  String
  lastName   String
  email String  @unique
  contacts Contact[]
  jobApplications JobApplication[]
  companies Company[]
  nextSteps NextStep[]
}

model Contact {
  id        Int     @id @default(autoincrement())
  title     String
  closeness String @default("D")
  type      String
  notes     String
  userId    Int
  firstName  String
  lastName   String
  user      User    @relation(fields: [userId], references: [id])
  nextSteps NextStep[]
}

model Company {
  id                Int     @id @default(autoincrement())
  name              String
  notes             String
  jobApplications   JobApplication[]
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
}

model JobApplication {
  id        Int     @id @default(autoincrement())
  type      String
  role      String
  notes     String
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
  companyId Int?     
  company   Company? @relation(fields: [companyId], references: [id])
}

model NextStep {
  id          Int     @id @default(autoincrement())
  action      String
  notes       String?
  type        String?
  user        User?    @relation(fields: [userId], references: [id])
  userId      Int?
  contact     Contact?   @relation(fields: [contactId], references: [id])
  contactId   Int?
  completed   Boolean @default(false)
}